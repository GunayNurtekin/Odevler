@model HomePageModel
@{
    ViewData["Title"] = "Anasayfa";

}


        <!-- Carousel Start -->


        
         <div class="container-fluid p-0">   
            <div class="owl-carousel header-carousel position-relative">
                @foreach(var slider in Model.Sliders)
                {
                    <div class="owl-carousel-item position-relative">
                    <img class="img-fluid" src="@slider.SliderImageUrl" alt="">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(43, 57, 64, .5);">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-10 col-lg-8">
                                    <h1 class="display-3 text-white animated slideInDown mb-4">@slider.SliderTitle</h1>
                                    <p class="fs-5 fw-medium text-white mb-4 pb-2">@slider.SliderSubTitle</p>
                                    <a href="" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">İş Ara</a>
                                    <a href="" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight">Yetenek Bul</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> 
                }
            </div> 
        </div>   
         
       
        <!-- Carousel End --> 


        <!-- Search Start -->
        <div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
            <div class="container">
                <div class="row g-2">
                    <div class="col-md-10">
                        <div class="row g-2">
                            <div class="col-md-4">
                                <input type="text" class="form-control border-0" placeholder="Keyword" />
                            </div>
                            <div class="col-md-4">
                                <select class="form-select border-0">
                                    <option selected>Category</option>
                                    <option value="1">Category 1</option>
                                    <option value="2">Category 2</option>
                                    <option value="3">Category 3</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select class="form-select border-0">
                                    <option selected>Location</option>
                                    <option value="1">Location 1</option>
                                    <option value="2">Location 2</option>
                                    <option value="3">Location 3</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-dark border-0 w-100">Ara</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Search End -->


        <!-- Category Start -->

        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Kategorilere Göre İş İlanları</h1>
  <div class="row g-4">

                     @foreach(var jobcategory in Model.JobCategories) 
                     {
                    <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                        <a class="cat-item rounded p-4" href="">
                            <i class="fa fa-3x fa-@jobcategory.JobCategoryLogoUrl text-primary mb-4"></i>
                            <h6 class="mb-3">@jobcategory.JobTitle</h6>
                            <p class="mb-0">ilan sayisi : @jobcategory.NeedPeopleNumber</p>
                       </a> 
                    </div> 
                       }
                    </div>
    </div>





        <!-- About Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5 align-items-center">
                    <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                        <div class="row g-0 about-bg rounded overflow-hidden">
                            <div class="col-6 text-start">
                                <img class="img-fluid w-100" src="img/about-1.jpg">
                            </div>
                            <div class="col-6 text-start">
                                <img class="img-fluid" src="img/about-2.jpg" style="width: 85%; margin-top: 15%;">
                            </div>
                            <div class="col-6 text-end">
                                <img class="img-fluid" src="img/about-3.jpg" style="width: 85%;">
                            </div>
                            <div class="col-6 text-end">
                                <img class="img-fluid w-100" src="img/about-4.jpg">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                        <h1 class="mb-4">@Model.AppSetting?.AboutTitle</h1>
                        <p class="mb-4">@Html.Raw(Model.AppSetting?.AboutText)</p>
                        <p><i class="fa fa-check text-primary me-3"></i>Binlerce Firmanın İhtiyaç Listesi</p>
                        <p><i class="fa fa-check text-primary me-3"></i>Yetenek ve Becerilerinize Uygun Eşleşme</p>
                        <p><i class="fa fa-check text-primary me-3"></i>Kısa Sürede Yanıt Garantisi</p>
                        <a class="btn btn-primary py-3 px-5 mt-3" href="">Devamını Oku !</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- About End -->


        <!-- Jobs Start -->

      

        


        <div class="container-xxl py-5">
            <div class="container">


             

                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">İş İlanları</h1>
                <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
                    <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                        <li class="nav-item">
                            <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active" data-bs-toggle="pill" href="#tab-1">
                                <h6 class="mt-n1 mb-0">Öne Çıkanlar</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex align-items-center text-start mx-3 pb-3" data-bs-toggle="pill" href="#tab-2">
                                <h6 class="mt-n1 mb-0">Tam Zamanlı</h6>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill" href="#tab-3">
                                <h6 class="mt-n1 mb-0">Yarı Zamanlı</h6>
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane fade show p-0 active">

                             @foreach(var joblist in Model.JobLists) 
                            {

                            <div class="job-item p-4 mb-4">
                                <div class="row g-4">
                                    <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                        <img class="flex-shrink-0 img-fluid border rounded" src="@joblist.logoOfCompanyUrl" alt="" style="width: 80px; height: 80px;">
                                        <div class="text-start ps-4">
                                            <h5 class="mb-3">@joblist.JobName</h5>
                                            <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@joblist.CityOfJob, Türkiye</span>
                                            <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>@joblist.TimeOfJob</span>
                                            <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>@joblist.SalaryofJob</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                        <div class="d-flex mb-3">
                                            <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                            <a class="btn btn-primary" href="">Şimdi Başvur</a>
                                        </div>
                                        <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>İlan Tarihi : @joblist.ListingTime</small>
                                    </div>
                                </div>
                            </div>
                            }


                        <div id="tab-2" class="tab-pane fade show p-0">
                            <a class="btn btn-primary py-3 px-5" href="">Daha Fazla İş Ara</a>
                        </div>
                    
        <!-- Jobs End --> 


        <!-- Testimonial Start -->
        <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container">
                <h1 class="text-center mb-5">Üyelerimizin Yorumları!!</h1>
                <div class="owl-carousel testimonial-carousel">

                    @foreach(var customers in Model.Customers)
                    {
                    <div class="testimonial-item bg-light rounded p-4">
                        <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                        <p>@customers.CustomerMessage</p>
                        <div class="d-flex align-items-center">
                            <img class="img-fluid flex-shrink-0 rounded" src="@customers.CustomerPhotoURL" style="width: 50px; height: 50px;">
                            <div class="ps-3">
                                <h5 class="mb-1">@customers.CustomerName</h5>
                                <small>Profesyonel</small>
                            </div>
                        </div>
                    </div>
                    }      
               
                </div>
            </div>
        </div>
       